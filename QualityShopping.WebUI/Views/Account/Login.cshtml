@model LoginModel
@{
    ViewData["Title"] = "Login";
}

@section Scripts {
    <script src="~/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
 
<div class="container position-absolute-center" style="width: 30rem; margin-top:25px;"> 
        <div class="card">
            <article class="card-body">
                <h3 class="card-title mb-4 mt-1 text-center">Login</h3> 
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="text-danger">@ViewBag.ErrorMessage</div>
                        } 
                        <form asp-controller="Account" asp-action="Login" method="post" asp-route-returnurl="@Model.ReturnUrl">
                            <div asp-validation-summary="All" class="text-danger"></div> 
                            <div class="form-group">
                                <label asp-for="Email">Your Email</label> 
                                <input asp-for="Email" value="@Model.Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span> 
                            </div> 
                            <div class="form-group">
                                <a class="float-right" href="#">Forgot?</a>
                                <label asp-for="Password">Your Password</label>
                                <input asp-for="Password" value="@Model.Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div> 
                            <div class="form-group">
                                <div class="checkbox">
                                    <label> <input type="checkbox" disabled> Save password </label>
                                </div> <!-- checkbox .// -->
                            </div> 
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </div> 
                        </form> 
            </article>
        </div> 
</div>


