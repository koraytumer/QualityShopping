@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section Scripts {
    <script src="~/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}


<div class="container" position-absolute-center" style="width: 30rem; margin-top:25px;">
    <div class="card">
        <article class="card-body">
            <h3 class="card-title mb-4 mt-1 text-center">Register User</h3>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="text-danger">@ViewBag.ErrorMessage</div>
            }
            <form asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label>Full Name</label>
                    <input asp-for="FullName" value="@Model.FullName" class="form-control" placeholder="Enter your full name" type="text">
                </div>
                <div class="form-group">
                    <label>User Name</label>
                    <input asp-for="Username" value="@Model.Username" class="form-control" placeholder="Enter your user name" type="text">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" value="@Model.Email" class="form-control" placeholder="Enter your email" type="email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input asp-for="Password" value="@Model.Password" class="form-control" placeholder="******" type="password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>RePassword</label>
                    <input asp-for="RePassword" value="@Model.RePassword" class="form-control" placeholder="******" type="password">
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Create User</button>
                </div>
            </form>
        </article>
    </div>
</div>
