@model CategoryModel
@{
    ViewData["Title"] = "CreateCategory";
}

 
<div class="container">
    <h1 style="text-align:center;">Create Category</h1>
    <hr /> <br /> <br />
    <div class="row">
        <div class="col-md-12">
            <form asp-controller="Admin" asp-action="CreateCategory" method="post">
                <div class="form-group row">
                    <h4 class="col-md-2">Name</h4>
                    <div class="col-md-10">
                        <input asp-for="Name" value="" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-10 offset-md-2">
                        <button type="submit" class="btn btn-primary">Save Category</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>