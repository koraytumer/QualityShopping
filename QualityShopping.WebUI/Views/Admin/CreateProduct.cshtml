@model ProductModel
@{
    ViewData["Title"] = "CreateProduct";
}

@section Scripts {
    <script src="~/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/ckeditor/3.6.4/Content/Scripts/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("editor");
    </script>
}
 

<div class="container">
    <h1 style="text-align:center;">Create Product</h1>
    <hr /> 
    <div class="row">
   
        <div class="col-md-12">

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="text-danger">@ViewBag.ErrorMessage</div>
            }

            <br /><br />
            <form asp-controller="Admin" asp-action="CreateProduct" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row"> 
                    <h4 class="col-md-2">Name</h4>
                    <div class="col-md-10">
                        <input asp-for="Name" value="@Model.Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <h4 class="col-md-2">Image Url</h4> 
                    <div class="col-md-10">
                        <input asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <h4 class="col-md-2">Description</h4> 
                    <div class="col-md-10">
                        <textarea id="editor" asp-for="Description" class="form-control">
                        value="@Model.Description"
                    </textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <h4 class="col-md-2">Price (TL)</h4> 
                    <div class="col-md-10">
                        <input asp-for="Price" value="@Model.Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-10 offset-md-2">
                        <button type="submit" class="btn btn-primary">Save Product</button>
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>