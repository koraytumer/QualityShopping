@model ProductListModel
@{
    ViewData["Title"] = "ProductList";
}




<h1 style="text-align:center;">Admin Products</h1>
<hr />
@if (Model.Products.Count() > 0)
{
    <br />
    <br />
    <table class="table table-bordered">
        <thead>
            <tr>
                <td style="width:30px;"><strong>Id</strong></td>
                <td style="width:100px;"><strong>Image</strong></td>
                <td><strong>Name</strong></td>
                <td style="width:12px;"><strong>Price</strong></td>
                <td style="width:150px;"></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <img src="~/img/@item.ImageUrl" width="80" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>
                        <a class="btn btn-primary btn-sm mr-2" href="/admin/products/@item.Id">Edit</a>
                        <form action="/admin/deleteproduct" method="post" style="display:inline;">
                            <input type="hidden" name="productId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Products</h4>
    </div>
}