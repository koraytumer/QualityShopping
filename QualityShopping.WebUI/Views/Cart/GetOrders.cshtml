@model List<OrderListModel>
@{
    ViewData["Title"] = "GetOrders";
}

<h1 style="text-align:center;">Orders</h1>
<hr />
@if (Model.Count > 0)
{
    @foreach (var order in Model)
    {
        <table class="table table-bordered table-sm mb-3">
            <thead class="bg-dark text-white">
                <tr>
                    <td colspan="2">Order Id: #@order.OrderId</td>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var items in order.OrderItems)
                {
                    <tr>
                        <td style="width:60px;">
                            <img src="~/img/@items.ImageUrl" width="50" />
                        </td>
                        <td>
                            @items.Name
                        </td>
                        <td>
                            @items.Price
                        </td>
                        <td>
                            @items.Quantity
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2">Customer Name:</td>
                    <td>@order.FirstName @order.LastName</td>
                    <td rowspan="3">Total: @order.TotalPrice()</td>
                </tr>
                <tr>
                    <td colspan="2">Adress: </td>
                    <td>@order.Address</td>
                </tr>
                <tr>
                    <td colspan="2">Phone: </td>
                    <td>@order.Phone</td>
                </tr>
                <tr>
                    <td colspan="2">Email: </td>
                    <td>@order.Email</td>
                </tr>
                <tr>
                    <td colspan="2">Payment Status: </td>
                    <td>@order.PaymentTypes</td>
                </tr>
                <tr>
                    <td colspan="2">Order Status: </td>
                    <td>@order.OrderState</td>
                </tr>
            </tfoot>
        </table>
    }
}
else
{
    <div class="alert alert-warning">
        No product you bought!
    </div>
}


