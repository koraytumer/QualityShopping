@model ProductDetailsModel
@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="~/img/@Model.Product.ImageUrl" alt="@Model.Product.Name" class="img-fluid" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h2 class="card-title" style="text-align:center;">@Model.Product.Name</h2>
                <hr />
                @foreach (var category in Model.Categories)
                {
                    <a href="#" class="btn btn-link p-0 mb-3">@category.Name</a>
                }
                <p class="card-text">@Html.Raw(Model.Product.Description)</p>
                <br />
                <div class="mb-3">
                    <div class="row">
                        <div class="col">
                            <h4><strong>Price :</strong>  @Model.Product.Price TL</h4>
                        </div>
                        <div class="col">
                            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
                                <input type="hidden" name="productId" value="@Model.Product.Id" />
                                <div class="input-group mb-3">
                                    <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width:100px;" />
                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-cart-plus"></i> Add To Cart
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>